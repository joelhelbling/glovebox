---
// Footer component
---

<footer class="hairline-t mt-auto">
  <div class="container-wide py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Links -->
      <nav class="flex items-center gap-6 text-sm">
        <a href="https://github.com/joelhelbling/glovebox" class="text-muted hover:text-ink transition-colors">
          GitHub
        </a>
        <span class="text-muted/50">&middot;</span>
        <a href="/glovebox/docs/" class="text-muted hover:text-ink transition-colors">
          Docs
        </a>
        <span class="text-muted/50">&middot;</span>
        <span class="text-muted">MIT License</span>
      </nav>

      <!-- Attribution -->
      <div class="text-sm text-muted text-center md:text-right">
        <p>From the workbench of <a href="https://github.com/joelhelbling" class="hover:text-ink">Joel Helbling</a></p>
      </div>
    </div>

    <!-- Tagline -->
    <div class="mt-4 py-6 hairline-t flex items-center justify-center gap-3">
      <img
        src="/glovebox/footer-glovebox.png"
        alt="Glovebox hands"
        class="h-16 w-auto opacity-80"
      />
      <p class="text-base text-muted italic">
        Now get in there and do some science!
      </p>
    </div>
  </div>
</footer>
