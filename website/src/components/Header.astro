---
const navLinks = [
  { href: '/glovebox/docs/', label: 'Docs' },
  { href: 'https://github.com/joelhelbling/glovebox', label: 'GitHub', external: true },
];
---

<header class="hairline-b sticky top-0 bg-cream/95 backdrop-blur-sm z-50">
  <div class="container-wide py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/glovebox/" class="flex items-center gap-3 text-ink hover:text-ink">
      <img
        src="/glovebox/footer-glovebox.png"
        alt="Glovebox logo"
        class="h-16 w-auto"
      />
      <span class="text-xl font-medium tracking-tight">Glovebox</span>
    </a>

    <!-- Navigation -->
    <nav class="flex items-center gap-6">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-muted hover:text-ink transition-colors font-medium"
          {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
        >
          {link.label}
          {link.external && (
            <svg class="inline-block w-4 h-4 ml-1 -mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"/>
            </svg>
          )}
        </a>
      ))}
    </nav>
  </div>
</header>
