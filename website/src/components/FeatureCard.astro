---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="feature-card">
  {icon && (
    <img
      src={icon}
      alt=""
      class="w-12 h-12 mb-4"
    />
  )}
  <h3 class="text-xl font-medium mb-3">{title}</h3>
  <p class="text-muted leading-relaxed">{description}</p>
</div>
