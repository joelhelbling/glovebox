---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Glovebox | Sandboxed Development that feels like Home">
	<main>
        <!-- Hero Section -->
        <section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
            <!-- Background gradients -->
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
                <div class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] rounded-full bg-blue-600/20 blur-[100px] mix-blend-screen animate-pulse-slow"></div>
                <div class="absolute bottom-[-10%] right-[-10%] w-[600px] h-[600px] rounded-full bg-purple-600/10 blur-[120px] mix-blend-screen"></div>
            </div>

            <div class="container mx-auto px-6 relative z-10 grid lg:grid-cols-2 gap-12 items-center">
                <div class="space-y-8">
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-800/50 border border-slate-700/50 backdrop-blur-sm">
                        <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
                        <span class="text-xs font-medium text-slate-300 tracking-wide uppercase">v0.1.0 Beta Available</span>
                    </div>
                    
                    <h1 class="text-5xl lg:text-7xl font-bold tracking-tight text-white leading-[1.1]">
                        Code Dangerous. <br/>
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Stay Safe.</span>
                    </h1>
                    
                    <p class="text-xl text-slate-400 max-w-lg leading-relaxed">
                        A composable, dockerized development sandbox for working with agentic coding tools and untrusted packages. Glamping on Jurassic Island.
                    </p>
                    
                    <div class="flex flex-col sm:flex-row gap-4 pt-4">
                        <a href="https://github.com/joelhelbling/glovebox" class="px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white rounded-lg font-semibold transition-all shadow-glow hover:shadow-blue-500/25 active:scale-95 flex items-center justify-center gap-2">
                            <span>Get Started</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                            </svg>
                        </a>
                        <div class="flex items-center gap-4 px-6 py-4 bg-slate-900/50 border border-slate-800 rounded-lg font-mono text-sm text-slate-300">
                            <span class="opacity-50">$</span>
                            <span>glovebox init --base</span>
                            <button class="ml-auto text-slate-500 hover:text-white transition-colors" aria-label="Copy command">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="relative lg:h-[600px] flex items-center justify-center perspective-1000">
                     <!-- Hero Image Container with Glassmorphism -->
                    <div class="relative w-full max-w-md aspect-square rounded-2xl overflow-hidden shadow-2xl shadow-blue-500/10 border border-slate-700/50 bg-slate-800/30 backdrop-blur-sm group hover:scale-[1.02] transition-transform duration-500">
                        <img src="/hero.png" alt="Glovebox Concept" class="w-full h-full object-cover" />
                        
                        <!-- Overlay gradient -->
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-transparent to-transparent opacity-60"></div>
                        
                        <!-- Floating UI Elements (Decorative) -->
                        <div class="absolute bottom-6 left-6 right-6 p-4 rounded-xl bg-slate-900/80 backdrop-blur-md border border-slate-700/50 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-2 h-2 rounded-full bg-green-500"></div>
                                <span class="text-xs font-mono text-slate-400">STATUS: SECURE</span>
                            </div>
                            <div class="h-1 w-full bg-slate-700 rounded-full overflow-hidden">
                                <div class="h-full w-3/4 bg-blue-500"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
                <a href="#features" class="text-slate-500 hover:text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                    </svg>
                </a>
            </div>
        </section>

        <!-- Features Grid -->
        <section id="features" class="py-32 bg-slate-950 relative border-t border-slate-800/50">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-2xl mx-auto mb-20">
                    <h2 class="text-3xl md:text-5xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-b from-white to-slate-400">Why Glovebox?</h2>
                    <p class="text-lg text-slate-400">
                        AI coding assistants are powerful, but running untrusted code is a risk. Glovebox gives you a sandboxed environment that actively protects your machine without killing your flow.
                    </p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Feature 1 -->
                    <div class="p-8 rounded-2xl bg-slate-900/50 border border-slate-800 hover:border-blue-500/30 hover:bg-slate-900 transition-all group">
                        <div class="w-12 h-12 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-400 mb-6 group-hover:scale-110 transition-transform">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-3">Composable Mods</h3>
                        <p class="text-slate-400 leading-relaxed">
                            Mix and match shells, editors, languages, and AI tools. Build your perfect environment like lego blocks.
                        </p>
                    </div>

                    <!-- Feature 2 -->
                    <div class="p-8 rounded-2xl bg-slate-900/50 border border-slate-800 hover:border-purple-500/30 hover:bg-slate-900 transition-all group">
                        <div class="w-12 h-12 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-400 mb-6 group-hover:scale-110 transition-transform">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-3">Layered Images</h3>
                        <p class="text-slate-400 leading-relaxed">
                            Base images contain your core tools. Project images extend them. Build once, cache forever.
                        </p>
                    </div>

                    <!-- Feature 3 -->
                    <div class="p-8 rounded-2xl bg-slate-900/50 border border-slate-800 hover:border-green-500/30 hover:bg-slate-900 transition-all group">
                        <div class="w-12 h-12 rounded-lg bg-green-500/10 flex items-center justify-center text-green-400 mb-6 group-hover:scale-110 transition-transform">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-3">Persistent Volumes</h3>
                        <p class="text-slate-400 leading-relaxed">
                            Your shell history, tool capabilities, and installed runtimes survive rebuilds. It's ephemeral but feels permanent.
                        </p>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Code Demo Section -->
        <section class="py-24 bg-slate-900/30 border-y border-slate-800/50">
             <div class="container mx-auto px-6 grid lg:grid-cols-2 gap-16 items-center">
                 <div>
                     <h2 class="text-3xl md:text-4xl font-bold mb-6">Simple Workflow</h2>
                     <div class="space-y-8">
                         <div class="flex gap-4">
                             <div class="flex-none pt-1">
                                 <div class="w-8 h-8 rounded-full bg-slate-800 flex items-center justify-center text-sm font-bold border border-slate-700">1</div>
                             </div>
                             <div>
                                 <h4 class="text-lg font-semibold mb-2">Initialize</h4>
                                 <p class="text-slate-400">Create your base profile with your preferred tools. This defines your "home" environment.</p>
                             </div>
                         </div>
                         <div class="flex gap-4">
                             <div class="flex-none pt-1">
                                 <div class="w-8 h-8 rounded-full bg-slate-800 flex items-center justify-center text-sm font-bold border border-slate-700">2</div>
                             </div>
                             <div>
                                 <h4 class="text-lg font-semibold mb-2">Build</h4>
                                 <p class="text-slate-400">Glovebox constructs a Docker image layered for performance. Core tools bake in; heavy tools wait for first run.</p>
                             </div>
                         </div>
                         <div class="flex gap-4">
                             <div class="flex-none pt-1">
                                 <div class="w-8 h-8 rounded-full bg-slate-800 flex items-center justify-center text-sm font-bold border border-slate-700">3</div>
                             </div>
                             <div>
                                 <h4 class="text-lg font-semibold mb-2">Run</h4>
                                 <p class="text-slate-400">Spin up a container in any project. Your code is mounted, your tools are ready, and your host OS is safe.</p>
                             </div>
                         </div>
                     </div>
                 </div>
                 
                 <div class="relative">
                     <div class="absolute -inset-1 rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-20 blur"></div>
                     <div class="relative rounded-xl bg-slate-950 border border-slate-800 p-6 font-mono text-sm overflow-hidden shadow-2xl">
                         <div class="flex items-center gap-2 mb-4 text-slate-500 border-b border-slate-800 pb-4">
                             <div class="w-3 h-3 rounded-full bg-red-500/20"></div>
                             <div class="w-3 h-3 rounded-full bg-yellow-500/20"></div>
                             <div class="w-3 h-3 rounded-full bg-green-500/20"></div>
                             <span class="ml-2 text-xs">user@glovebox:~</span>
                         </div>
                         <div class="space-y-2">
                            <div class="flex">
                                <span class="text-blue-400 mr-2">➜</span>
                                <span class="text-slate-300">glovebox init --base</span>
                            </div>
                            <div class="text-slate-500 mb-4">Created ~/.glovebox/profile.yaml</div>
                            
                            <div class="flex">
                                <span class="text-blue-400 mr-2">➜</span>
                                <span class="text-slate-300">glovebox build --base</span>
                            </div>
                            <div class="text-slate-500 mb-4">
                                <span class="block">Building glovebox:base...</span>
                                <span class="block text-green-400">✔ Base image built successfully</span>
                            </div>

                            <div class="flex">
                                <span class="text-blue-400 mr-2">➜</span>
                                <span class="text-slate-300">cd ~/projects/suspicious-repo</span>
                            </div>
                            <div class="flex">
                                <span class="text-blue-400 mr-2">➜</span>
                                <span class="text-slate-300">glovebox run</span>
                            </div>
                            <div class="text-slate-500">
                                <span class="block">Mounting /Users/me/code/suspicious-repo -> /home/ubuntu/project</span>
                                <span class="block text-blue-400">Entering safe environment...</span>
                            </div>
                         </div>
                     </div>
                 </div>
             </div>
        </section>

        <!-- CTA Section -->
        <section class="py-32 relative overflow-hidden">
             <!-- Background flare -->
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-blue-600/10 blur-[100px] rounded-full pointer-events-none"></div>

            <div class="container mx-auto px-6 text-center relative z-10">
                <h2 class="text-4xl md:text-5xl font-bold mb-8">Ready to contain the chaos?</h2>
                <div class="flex flex-col items-center gap-6">
                    <a href="https://github.com/joelhelbling/glovebox" class="px-10 py-5 bg-white text-slate-900 hover:bg-zinc-200 rounded-full font-bold text-lg transition-all shadow-xl shadow-white/5 disabled">
                        View on GitHub
                    </a>
                </div>
            </div>
        </section>

	</main>
    
    <footer class="py-12 border-t border-slate-800 mt-12 bg-slate-950">
        <div class="container mx-auto px-6 text-center text-slate-500 text-sm">
            <p>&copy; {new Date().getFullYear()} Glovebox. Open Source under MIT License.</p>
        </div>
    </footer>
</Layout>

<style>
    /* Custom utility for perspective */
    .perspective-1000 {
        perspective: 1000px;
    }
</style>
